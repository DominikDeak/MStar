<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/black_transparent" >    <RelativeLayout        android:id="@+id/ad"        android:layout_width="@dimen/allapp_relativeLayout_width"        android:layout_height="fill_parent" >        <TextView            android:id="@+id/allapp_tv"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="@dimen/allapp_tv_margin_left"            android:layout_marginTop="@dimen/allapp_tv_margin_top"            android:text="@string/allapp"            android:textColor="@android:color/white"            android:textSize="@dimen/allapp_tv_textsize" />        <ImageView            android:id="@+id/allapp_ad_img"            android:layout_width="@dimen/allapp_ad_img_width"            android:layout_height="@dimen/allapp_ad_img_heigth"            android:layout_above="@+id/back_btn"            android:layout_below="@id/allapp_tv"            android:layout_marginLeft="@dimen/allapp_ad_img_margin_left"            android:layout_marginTop="@dimen/allapp_ad_img_margin_top"            android:onClick="true"            android:focusable="true"            android:background="@drawable/focus" />        <Button            android:id="@+id/back_btn"            android:layout_width="wrap_content"            android:layout_height="@dimen/allapp_back_btn_heigth"            android:layout_alignParentBottom="true"            android:layout_marginBottom="@dimen/allapp_back_btn_margin_bottom"            android:layout_marginLeft="@dimen/allapp_back_btn_margin_left"            android:background="@drawable/focus"            android:drawableLeft="@drawable/ic_back"            android:gravity="center"            android:paddingBottom="@dimen/allapp_back_btn_padding_bottom"            android:paddingLeft="@dimen/allapp_back_btn_padding_left"            android:paddingRight="@dimen/allapp_back_btn_padding_right"            android:paddingTop="@dimen/allapp_back_btn_padding_top"            android:text="@string/back"            android:textColor="@android:color/white"            android:textSize="@dimen/allapp_back_btn_textsize" />    </RelativeLayout>    <ImageView        android:id="@+id/list_selector"        android:layout_width="@dimen/allapp_back_btnlist_selector_width"        android:layout_height="@dimen/allapp_back_btnlist_selector_height"        android:background="@drawable/home_focus"        android:visibility="gone" />    <GridView        android:id="@+id/appgridview"        android:layout_width="@dimen/allapp_appgridview_widht"        android:layout_height="fill_parent"        android:layout_gravity="center"        android:layout_marginRight="@dimen/allapp_appgridview_margin_rifht"        android:layout_marginTop="@dimen/allapp_appgridview_margin_top"        android:layout_toRightOf="@id/ad"        android:gravity="center"        android:horizontalSpacing="@dimen/allapp_appgridview_horizontalSpacing"        android:listSelector="@drawable/focus"        android:numColumns="5"        android:scrollbars="none"        android:stretchMode="columnWidth"        android:verticalSpacing="@dimen/allapp_appgridview_verticalSpacing" /></RelativeLayout>