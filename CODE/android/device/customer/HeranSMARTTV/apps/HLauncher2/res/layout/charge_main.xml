<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#CCCCCC" >

    <ImageButton
        android:id="@+id/left"
        android:layout_width="963dp"
        android:layout_height="700dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/main" />

    <ImageButton
        android:id="@+id/right01"
        android:layout_width="316dp"
        android:layout_height="363dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/left"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ad_1" />

    <ImageButton
        android:id="@+id/right02"
        android:layout_width="316dp"
        android:layout_height="168dp"
        android:layout_alignStart="@id/right01"
        android:layout_below="@id/right01"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/btn_2" />

    <ImageButton
        android:id="@+id/right03"
        android:layout_width="316dp"
        android:layout_height="168dp"
        android:layout_alignStart="@id/right02"
        android:layout_below="@id/right02"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/btn_3" />

    <com.heran.launcher2.util.FocusView
        android:id="@+id/charage_selector"
        android:layout_width="@dimen/buttion_tv_width"
        android:layout_height="@dimen/buttion_tv_height"
        android:background="@drawable/focus_home"
        android:visibility="gone" />

</RelativeLayout>