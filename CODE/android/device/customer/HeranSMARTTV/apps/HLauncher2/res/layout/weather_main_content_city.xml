<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="306.6dp"
        android:layout_height="366dp"
        android:id="@+id/city"
        android:background="@drawable/weather_04_2nav_n_frame"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false" >

        <ListView
            android:id="@+id/city_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:divider="@null"
            android:layout_marginTop="39dp" >
        </ListView>
    </LinearLayout>

    <FrameLayout
        android:layout_width="230dp"
        android:layout_height="366.6dp" >

        <ImageView
            android:id="@+id/map"
            android:layout_width="174dp"
            android:layout_height="322.6dp"
            android:layout_gravity="center"
            android:background="@drawable/weather_04_2nav_n_map" />

        <FrameLayout
            android:layout_width="230.6dp"
            android:layout_height="25.6dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/weather_04_2nav_bg" >

            <ImageButton
                android:id="@+id/direction"
                android:layout_width="226.6dp"
                android:layout_height="22.6dp"
                android:background="@drawable/weather_04_2nav_n_text" />
        </FrameLayout>
    </FrameLayout>

</LinearLayout>