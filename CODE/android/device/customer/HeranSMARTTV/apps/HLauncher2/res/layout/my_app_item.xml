<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="@dimen/appicon_item_linearlayout_width"    android:layout_height="@dimen/appicon_item_linearlayout_height"    android:gravity="center_horizontal"    android:orientation="vertical"    android:paddingBottom="@dimen/appicon_item_padding_bottom"    android:paddingTop="@dimen/appicon_item_padding_top" >    <LinearLayout        android:layout_width="@dimen/appicon_item_linearlayout_1_width"        android:layout_height="90dp"        android:gravity="center" >        <ImageView            android:id="@+id/my_appicon"            android:layout_width="80dp"            android:layout_height="80dp"            android:scaleType="fitCenter" />    </LinearLayout>    <TextView        android:id="@+id/my_apptitle"        android:layout_width="@dimen/appicon_item_apptitle_width"        android:layout_height="wrap_content"        android:ellipsize="marquee"        android:gravity="center_horizontal|center_vertical"        android:marqueeRepeatLimit="marquee_forever"        android:singleLine="true"        android:textColor="#FFFF"        android:textSize="@dimen/appicon_item_apptitle_textSize" />    <ProgressBar        android:id="@+id/my_dowlonding"        style="?android:attr/progressBarStyleHorizontal"        android:layout_width="90dp"        android:layout_height="5dp"        android:max="100"        android:visibility="gone" /></LinearLayout>