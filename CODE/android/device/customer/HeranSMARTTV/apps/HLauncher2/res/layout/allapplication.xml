<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/black_transparent" >    <RelativeLayout        android:id="@+id/ad"        android:layout_width="@dimen/allapp_relativeLayout_width"        android:layout_height="fill_parent" >        <TextView            android:id="@+id/allapp_tv"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="@dimen/allapp_tv_margin_left"            android:layout_marginTop="@dimen/allapp_tv_margin_top"            android:text="@string/allapp"            android:textColor="@android:color/white"            android:textSize="@dimen/allapp_tv_textsize" />        <ImageButton            android:id="@+id/allapp_ad_img"            android:layout_width="@dimen/allapp_ad_img_width"            android:layout_height="@dimen/allapp_ad_img_heigth"            android:layout_above="@+id/back_btn"            android:layout_below="@id/allapp_tv"            android:padding="20dp"            android:layout_marginStart="@dimen/allapp_ad_img_margin_left"            android:layout_marginTop="@dimen/allapp_ad_img_margin_top"            android:background="@drawable/home_focus"            android:scaleType="fitXY"            android:src="@drawable/ad" />        <Button            android:id="@+id/back_btn"            android:layout_width="wrap_content"            android:layout_height="@dimen/allapp_back_btn_heigth"            android:layout_alignParentBottom="true"            android:layout_marginBottom="@dimen/allapp_back_btn_margin_bottom"            android:layout_marginStart="@dimen/allapp_back_btn_margin_left"            android:background="@drawable/home_focus"            android:drawableStart="@drawable/ic_back"            android:gravity="center"            android:paddingBottom="@dimen/allapp_back_btn_padding_bottom"            android:paddingStart="@dimen/allapp_back_btn_padding_left"            android:paddingEnd="@dimen/allapp_back_btn_padding_right"            android:paddingTop="@dimen/allapp_back_btn_padding_top"            android:text="@string/back"            android:textColor="@android:color/white"            android:textSize="@dimen/allapp_back_btn_textsize" />    </RelativeLayout>    <GridView        android:id="@+id/appgridview"        android:layout_width="@dimen/allapp_appgridview_widht"        android:layout_height="fill_parent"        android:layout_gravity="center"        android:layout_marginEnd="@dimen/allapp_appgridview_margin_rifht"        android:layout_marginTop="@dimen/allapp_appgridview_margin_top"        android:layout_toEndOf="@id/ad"        android:gravity="center"        android:horizontalSpacing="@dimen/allapp_appgridview_horizontalSpacing"        android:listSelector="@drawable/home_focus"        android:numColumns="5"        android:scrollbars="none"        android:stretchMode="columnWidth"        android:verticalSpacing="@dimen/allapp_appgridview_verticalSpacing" /></RelativeLayout>