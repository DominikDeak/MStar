<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/eos_pvr_listview_item_layout_height"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/pvr_listview_item_index"
        android:layout_width="@dimen/pvr_listview_item_index_layout_width"
        android:layout_height="@dimen/pvr_listview_item_index_layout_height"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/pvr_listview_item_index_layout_marginLeft"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/str_pvr_listview_item"
        android:textColor="@android:color/white"
        android:textSize="@dimen/pvr_listview_item_index_textSize" />

    <TextView
        android:id="@+id/pvr_listview_item_lcn"
        android:layout_width="@dimen/pvr_listview_item_lcn_layout_width"
        android:layout_height="@dimen/pvr_listview_item_lcn_layout_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/str_pvr_listview_item"
        android:textColor="@android:color/white"
        android:textSize="@dimen/pvr_listview_item_lcn_textSize"
        android:visibility="gone" />

    <TextView
        android:id="@+id/pvr_listview_item_channel"
        android:layout_width="@dimen/pvr_listview_item_channel_layout_width"
        android:layout_height="@dimen/pvr_listview_item_channel_layout_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/str_pvr_listview_item"
        android:textColor="@android:color/white"
        android:textSize="@dimen/pvr_listview_item_channel_textSize" />

    <TextView
        android:id="@+id/pvr_listview_item_program"
        android:layout_width="@dimen/pvr_listview_item_program_layout_width"
        android:layout_height="@dimen/pvr_listview_item_program_layout_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/str_pvr_listview_item"
        android:textColor="@android:color/white"
        android:textSize="@dimen/pvr_listview_item_program_textSize" />

    <ImageView
        android:id="@+id/player_recording_file"
        android:layout_width="@dimen/player_recording_file_layout_width"
        android:layout_height="@dimen/player_recording_file_layout_height"
        android:layout_gravity="center_vertical"
        android:src="@drawable/player_recorder" />

</LinearLayout>