<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/eos_pvr_file_system_layout_width"
        android:layout_height="@dimen/eos_pvr_file_system_layout_height"
        android:background="@drawable/tv_record_list_r_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pvr_file_system_title"
            android:layout_width="@dimen/pvr_file_system_title_layout_width"
            android:layout_height="@dimen/pvr_file_system_title_layout_height"
            android:layout_marginTop="@dimen/pvr_file_system_title_layout_marginTop"
            android:gravity="center"
            android:text="@string/str_pvr_file_system_title" >
        </TextView>

        <TextView
            android:id="@+id/pvr_file_system_select_disk"
            android:layout_width="@dimen/pvr_file_system_select_disk_layout_width"
            android:layout_height="@dimen/pvr_file_system_select_disk_layout_height"
            android:background="@drawable/button_state"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/str_pvr_file_system_select_disk" >
        </TextView>

        <TextView
            android:id="@+id/pvr_file_system_time_shift_size"
            android:layout_width="@dimen/pvr_file_system_time_shift_size_layout_width"
            android:layout_height="@dimen/pvr_file_system_time_shift_size_layout_height"
            android:background="@drawable/button_state"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/str_pvr_file_system_time_shift_size" >
        </TextView>

        <LinearLayout
            android:id="@+id/pvr_file_system_format_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_state"
            android:focusable="true" >

            <TextView
                android:id="@+id/pvr_file_system_format_start"
                android:layout_width="@dimen/pvr_file_system_format_start_layout_width"
                android:layout_height="@dimen/pvr_file_system_format_start_layout_height"
                android:gravity="center"
                android:text="@string/str_pvr_file_system_format_start" >
            </TextView>

            <TextView
                android:id="@+id/pvr_file_system_format_context"
                android:layout_width="@dimen/pvr_file_system_format_context_layout_width"
                android:layout_height="@dimen/pvr_file_system_format_context_layout_height"
                android:gravity="center"
                android:text="@string/str_pvr_file_system_format_context" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pvr_file_system_speed_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_state"
            android:focusable="true" >

            <TextView
                android:id="@+id/pvr_file_system_speed_check"
                android:layout_width="@dimen/pvr_file_system_speed_check_layout_width"
                android:layout_height="@dimen/pvr_file_system_speed_check_layout_height"
                android:gravity="center"
                android:text="@string/str_pvr_file_system_speed_check" >
            </TextView>

            <TextView
                android:id="@+id/pvr_file_system_speed_context"
                android:layout_width="@dimen/pvr_file_system_speed_context_layout_width"
                android:layout_height="@dimen/pvr_file_system_speed_context_layout_height"
                android:gravity="center"
                android:text="@string/str_pvr_file_system_speed_context" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pvr_file_system_always_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_state"
            android:focusable="true" >

            <TextView
                android:id="@+id/pvr_file_system_always_timeshift"
                android:layout_width="@dimen/pvr_file_system_always_timeshift_layout_width"
                android:layout_height="@dimen/pvr_file_system_always_timeshift_layout_height"
                android:gravity="center"
                android:text="@string/str_pvr_file_system_always_timeshift" >
            </TextView>

            <TextView
                android:id="@+id/pvr_file_system_always_context"
                android:layout_width="@dimen/pvr_file_system_always_context_layout_width"
                android:layout_height="@dimen/pvr_file_system_always_context_layout_height"
                android:gravity="center"
                android:text="@string/str_pvr_file_system_always_context" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eos_pvr_file_system_layout_marginTop" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_img_ok" >
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/str_mainmenu_menu_layout_height"
                android:layout_marginLeft="@dimen/str_mainmenu_menu_layout_marginLeft"
                android:text="@string/str_mainmenu_menu" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>