<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/tv_record_list_r_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/str_pvr_video_manager_layout_marginTop"
        android:text="@string/str_pvr_video_manager"
        android:textColor="@android:color/white"
        android:textSize="@dimen/str_pvr_video_manager_textSize" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/str_pvr_video_manager_layout_height"
        android:layout_marginLeft="@dimen/str_pvr_video_manager_layout_marginLeft"
        android:layout_marginRight="@dimen/str_pvr_video_manager_layout_marginRight"
        android:layout_marginTop="@dimen/str_pvr_video_manager_layout_marginTop1" >

        <LinearLayout
            android:id="@+id/lcninfo"
            android:layout_width="@dimen/lcninfo_layout_width"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/lcninfo_LinearLayout_layout_height"
                android:background="@drawable/title_long"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/pvr_index_textview"
                    android:layout_width="@dimen/pvr_index_textview_layout_width"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/pvr_index_textview_layout_marginLeft"
                    android:gravity="center"
                    android:text="@string/str_pvr_index_textview"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/pvr_lcn_textview_textSize" />

                <TextView
                    android:id="@+id/pvr_lcn_textview"
                    android:layout_width="@dimen/pvr_lcn_textview_layout_width"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/str_pvr_lcn_textview"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/pvr_lcn_textview_textSize"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/pvr_channel_textview"
                    android:layout_width="@dimen/pvr_channel_textview_layout_width"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/str_pvr_channel_textview"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/pvr_channel_textview_textSize" />

                <TextView
                    android:id="@+id/pvr_program_service_textview"
                    android:layout_width="@dimen/pvr_program_service_textview_layout_width"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/srt_pvr_program_service_textview"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/pvr_program_service_textview_textSize" />
            </LinearLayout>

            <ListView
                android:id="@+id/pvr_listview"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/pvr_listview_layout_height"
                android:layout_marginTop="@dimen/pvr_listview_layout_marginTop"
                android:listSelector="@drawable/button_state" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/eos_pvr_full_page_browser_layout_height"
                android:layout_gravity="right"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/pvr_tips_red_layout_width"
                    android:layout_height="@dimen/pvr_tips_red_layout_height"
                    android:layout_marginLeft="@dimen/pvr_tips_red_layout_marginLeft"
                    android:layout_marginTop="@dimen/pvr_tips_red_layout_marginTop"
                    android:src="@drawable/pvr_tips_red" />

                <TextView
                    android:layout_width="@dimen/str_pvr_program_service_tips_red_layout_width"
                    android:layout_height="@dimen/str_pvr_program_service_tips_red_layout_height"
                    android:layout_marginLeft="@dimen/str_pvr_program_service_tips_red_layout_marginLeft"
                    android:gravity="center|left"
                    android:text="@string/str_pvr_program_service_tips_red"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/str_pvr_program_service_tips_red_textSize" />

                <ImageView
                    android:layout_width="@dimen/pvr_tips_blue_layout_width"
                    android:layout_height="@dimen/pvr_tips_blue_layout_width"
                    android:layout_marginTop="@dimen/pvr_tips_blue_layout_marginTop"
                    android:src="@drawable/pvr_tips_blue"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="@dimen/str_pvr_program_service_tips_blue_layout_width"
                    android:layout_height="@dimen/str_pvr_program_service_tips_blue_layout_width"
                    android:layout_marginLeft="@dimen/str_pvr_program_service_tips_blue_layout_marginLeft"
                    android:gravity="center|left"
                    android:text="@string/str_pvr_program_service_tips_blue"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/str_pvr_program_service_tips_blue_textSize"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/menu_divideline_f10_layout_width"
            android:layout_height="@dimen/menu_divideline_f10_layout_height"
            android:layout_marginLeft="@dimen/menu_divideline_f10_layout_marginLeft"
            android:layout_toRightOf="@id/lcninfo"
            android:background="@drawable/menu_divideline_f10" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/lcninfo"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/lcninfo_layout_height"
                android:layout_marginRight="@dimen/lcninfo_layout_marginRight"
                android:gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/pvr_lcn_record_data"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/str_pvr_currenttime"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/pvr_lcn_record_data_textSize" />

                <TextView
                    android:id="@+id/pvr_lcn_data"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/pvr_lcn_record_data_textSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/eos_pvr_full_page_browser_LinearLayout_layout_height"
                android:layout_marginLeft="@dimen/eos_pvr_full_page_browser_LinearLayout_layout_marginLeft"
                android:layout_marginRight="@dimen/eos_pvr_full_page_browser_LinearLayout_layout_marginRight"
                android:layout_marginTop="@dimen/eos_pvr_full_page_browser_LinearLayout_layout_marginTop"
                android:orientation="horizontal" >

                <SurfaceView
                    android:id="@+id/pvr_lcn_img"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/eos_pvr_full_page_browser_LinearLayout1_layout_height"
                android:layout_marginLeft="@dimen/eos_pvr_full_page_browser_LinearLayout1_layout_marginLeft"
                android:layout_marginRight="@dimen/eos_pvr_full_page_browser_LinearLayout1_layout_marginRight"
                android:layout_marginTop="@dimen/eos_pvr_full_page_browser_LinearLayout1_layout_marginTop"
                android:gravity="center" >

                <ProgressBar
                    android:id="@+id/pvr_progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/pvr_progressBar_layout_height" />
            </LinearLayout>
            <!-- add the textview to show the total time by owen.qin -->

            <TextView
                android:id="@+id/total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/total_time_layout_marginRight"
                android:textSize="@dimen/total_time_textSize" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/pvr_gallery"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pvr_gallery_layout_height"
        android:layout_marginLeft="@dimen/pvr_gallery_layout_marginLeft"
        android:layout_marginRight="@dimen/pvr_gallery_layout_marginRight"
        android:visibility="gone" 
        android:orientation="horizontal">
    </LinearLayout>

</LinearLayout>