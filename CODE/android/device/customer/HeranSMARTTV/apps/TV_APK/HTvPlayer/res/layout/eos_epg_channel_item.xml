<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/eos_epg_channel_item_layout_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/eos_epg_channel_item_padding" >

    <LinearLayout
        android:layout_width="@dimen/eos_epg_channel_item_LinearLayout_layout_width"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/epg_channelno"
            style="@style/setting_content"
            android:layout_width="@dimen/epg_channelno_layout_width"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left" />

        <TextView
            android:id="@+id/epg_channeltype"
            style="@style/setting_content"
            android:layout_width="@dimen/epg_channeltype_layout_width"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/epg_channeltype_layout_marginRight"
            android:gravity="center_vertical|right" />
    </LinearLayout>

    <TextView
        android:id="@+id/epg_channelname"
        style="@style/setting_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/epg_channelname_textSize" />

</LinearLayout>