<?xml version="1.0" encoding="utf-8" ?> 
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
    <specVersion>
        <major>1</major>
        <minor>1</minor>
    </specVersion>
    <actionList>
		<action>
            <name>SetVoiceSearchOnOff</name>
            <argumentList>
                <argument>
                    <name>InstanceID</name>
                    <direction>in</direction>
                    <relatedStateVariable>A_ARG_TYPE_InstanceID</relatedStateVariable>
                </argument>
                <argument>
                    <name>VoiceSearchOnOff</name>
                    <direction>in</direction>
                    <relatedStateVariable>VoiceSearchParam</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
		<action>
            <name>SetVoiceSearchText</name>
            <argumentList>
                <argument>
                    <name>InstanceID</name>
                    <direction>in</direction>
                    <relatedStateVariable>A_ARG_TYPE_InstanceID</relatedStateVariable>
                </argument>
                <argument>
                    <name>VoiceSearchText</name>
                    <direction>in</direction>
                    <relatedStateVariable>VoiceSearchParam</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
		<action>
            <name>GetVoiceSearchState</name>
            <argumentList>
                <argument>
                    <name>InstanceID</name>
                    <direction>in</direction>
                    <relatedStateVariable>A_ARG_TYPE_InstanceID</relatedStateVariable>
                </argument>
                <argument>
                    <name>VoiceSearchState</name>
                    <direction>out</direction>
                    <relatedStateVariable>VoiceSearchParam</relatedStateVariable>
                </argument>
				<argument>
                    <name>VoiceSearchStateDesc</name>
                    <direction>out</direction>
                    <relatedStateVariable>VoiceSearchParam</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
    </actionList>
    <serviceStateTable>
        <stateVariable sendEvents="yes">
            <name>LastChange</name>
            <dataType>string</dataType>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>A_ARG_TYPE_InstanceID</name>
            <dataType>ui4</dataType>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>A_ARG_TYPE_PresetName</name>
            <dataType>string</dataType>
            <allowedValueList>
                <allowedValue>FactoryDefaults</allowedValue>
                <allowedValue>InstallationDefaults</allowedValue>
            </allowedValueList>
        </stateVariable>
		<stateVariable sendEvents="no">
            <name>VoiceSearchParam</name>
            <dataType>string</dataType>
        </stateVariable>
    </serviceStateTable>
</scpd>