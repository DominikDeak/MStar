<?xml version="1.0" encoding="utf-8" ?> 
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
    <specVersion>
        <major>1</major>
        <minor>1</minor>
    </specVersion>
    <actionList>
        <action>
            <name>InstallApp</name>
            <argumentList>
                <argument>
                    <name>InstanceID</name>
                    <direction>in</direction>
                    <relatedStateVariable>A_ARG_TYPE_InstanceID</relatedStateVariable>
                </argument>
                <argument>
                    <name>CurrentURI</name>
                    <direction>in</direction>
                    <relatedStateVariable>AppManageParam</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>OpenApp</name>
            <argumentList>
                <argument>
                    <name>InstanceID</name>
                    <direction>in</direction>
                    <relatedStateVariable>A_ARG_TYPE_InstanceID</relatedStateVariable>
                </argument>
                <argument>
                    <name>CurrentURI</name>
                    <direction>in</direction>
                    <relatedStateVariable>AppManageParam</relatedStateVariable>
                </argument>
                 <argument>
                    <name>CurrentURIMetaData</name>
                    <direction>in</direction>
                    <relatedStateVariable>AppManageMetaData</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>DeleteApp</name>
            <argumentList>
                <argument>
                    <name>InstanceID</name>
                    <direction>in</direction>
                    <relatedStateVariable>A_ARG_TYPE_InstanceID</relatedStateVariable>
                </argument>
                <argument>
                    <name>CurrentURI</name>
                    <direction>in</direction>
                    <relatedStateVariable>AppManageParam</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
		<action>
            <name>GetAppInfoList</name>
            <argumentList>
				<argument>
                    <name>InstanceID</name>
                    <direction>in</direction>
                    <relatedStateVariable>A_ARG_TYPE_InstanceID</relatedStateVariable>
                </argument>
                <argument>
                    <name>AppInfoList</name>
                    <direction>out</direction>
                    <relatedStateVariable>AppManageParam</relatedStateVariable>
                </argument>
            </argumentList>
        </action>  
		<action>
            <name>GetAppStatusList</name>
            <argumentList>
				<argument>
                    <name>InstanceID</name>
                    <direction>in</direction>
                    <relatedStateVariable>A_ARG_TYPE_InstanceID</relatedStateVariable>
                </argument>
                <argument>
                    <name>AppStatusList</name>
                    <direction>out</direction>
                    <relatedStateVariable>AppManageParam</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
    </actionList>
    <serviceStateTable>
        <stateVariable sendEvents="yes">
            <name>LastChange</name>
            <dataType>string</dataType>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>PresetNameList</name>
            <dataType>string</dataType>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>A_ARG_TYPE_InstanceID</name>
            <dataType>ui4</dataType>
        </stateVariable>
		<stateVariable sendEvents="no">
            <name>AppManageParam</name>
            <dataType>string</dataType>
        </stateVariable>
		<stateVariable sendEvents="no">
            <name>AppManageMetaData</name>
            <dataType>string</dataType>
        </stateVariable>
    </serviceStateTable>
</scpd>