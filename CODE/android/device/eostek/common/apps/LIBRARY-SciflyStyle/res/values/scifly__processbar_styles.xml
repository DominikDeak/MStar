<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Scifly.ProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/scifly_progressbar_selector_medium</item>
        <item name="android:indeterminateDuration">2000</item>
    </style>

    <style name="Scifly.ProgressBar.Large" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/scifly_progressbar_selector_large</item>
    </style>

    <style name="Scifly.ProgressBar.Small" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/scifly_progressbar_selector_small</item>
    </style>

    <style name="Scifly.ProgressBar.Medium" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/scifly_progressbar_selector_medium</item>
    </style>

    <style name="Scifly.ProgressBar.Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/scifly_progressbar_horizontal</item>
        <item name="android:max">100</item>
    </style>


</resources>