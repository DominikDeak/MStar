<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#0b8df5"
                android:startColor="#0768b5" />

            <stroke
                android:width="1dp"
                android:color="#09dbe1" />

            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#0b8df5"
                android:startColor="#0b8df5" />

            <stroke
                android:width="1dp"
                android:color="#09dbe1" />

            <corners
                android:radius="3dp" />

        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#565462"
                android:startColor="#565462" />

            <corners
                android:radius="3dp" />

        </shape>
    </item>

</selector>