<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/task_outter_focus"
    android:gravity="center_horizontal" >

    <LinearLayout
        android:id="@+id/item_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/exit_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exit_tip"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/exit_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:src="@drawable/up" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_images"
        android:layout_width="225dp"
        android:layout_height="130dp"
        android:layout_below="@id/item_header"
        android:background="@drawable/focus_small"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/app_thumbnail"
            android:layout_width="185dp"
            android:layout_height="105dp"
            android:layout_centerHorizontal="true"
            android:background="#44444444"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:layout_alignLeft="@+id/app_thumbnail"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_images"
        android:layout_below="@id/item_images"
        android:gravity="center" >

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_text"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>