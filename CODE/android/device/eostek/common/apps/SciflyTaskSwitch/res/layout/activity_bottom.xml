<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="23dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/clean_block"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/focus_small"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/clean_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/one_key_clean"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/kill_process" />

            <LinearLayout
                android:id="@+id/clean_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/one_key_clean"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/bkground_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bkground_count"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/clean_separator"
            android:layout_width="1dp"
            android:layout_height="@dimen/bottom_seperator_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="#aaffffff"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/remove_block_outter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/remove_block"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/focus_small"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/remove_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/remove_usb"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/remove_usb_icon" />

            <LinearLayout
                android:id="@+id/remove_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/remove_usb"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/remove_text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remove_usb_count"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/remove_separator"
            android:layout_width="1dp"
            android:layout_height="@dimen/bottom_seperator_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="#aaffffff"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/function_block_scroll"
        android:scrollbars="none"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bottom_button_margin"
        android:layout_weight="2" >

        <LinearLayout
            android:id="@+id/function_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/report_bug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/focus_small"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <ImageView
                    android:layout_width="@dimen/bottom_button_width"
                    android:layout_height="@dimen/bottom_button_height"
                    android:contentDescription="@string/all_app_text"
                    android:src="@drawable/report_bug" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/report_bug"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/all_app_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bottom_button_margin"
                android:background="@drawable/focus_small"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <!-- android:background="#77ffffff" -->

                <ImageView
                    android:layout_width="@dimen/bottom_button_width"
                    android:layout_height="@dimen/bottom_button_height"
                    android:contentDescription="@string/all_app_text"
                    android:src="@drawable/all_app" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/all_app_text"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/history_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bottom_button_margin"
                android:background="@drawable/focus_small"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <ImageView
                    android:layout_width="@dimen/bottom_button_width"
                    android:layout_height="@dimen/bottom_button_height"
                    android:contentDescription="@string/history_text"
                    android:src="@drawable/history" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/history_text"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bottom_button_margin"
                android:background="@drawable/focus_small"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <ImageView
                    android:layout_width="@dimen/bottom_button_width"
                    android:layout_height="@dimen/bottom_button_height"
                    android:contentDescription="@string/setting_text"
                    android:src="@drawable/settings" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/setting_text"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/media_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bottom_button_margin"
                android:background="@drawable/focus_small"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <ImageView
                    android:layout_width="@dimen/bottom_button_width"
                    android:layout_height="@dimen/bottom_button_height"
                    android:contentDescription="@string/media_text"
                    android:src="@drawable/media" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/media_text"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/video_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bottom_button_margin"
                android:background="@drawable/focus_small"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <ImageView
                    android:layout_width="@dimen/bottom_button_width"
                    android:layout_height="@dimen/bottom_button_height"
                    android:contentDescription="@string/quality_text"
                    android:src="@drawable/video_quality" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/quality_text"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/voice_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bottom_button_margin"
                android:background="@drawable/focus_small"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <ImageView
                    android:layout_width="@dimen/bottom_button_width"
                    android:layout_height="@dimen/bottom_button_height"
                    android:contentDescription="@string/voice_controller"
                    android:src="@drawable/voice_controller" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/voice_controller"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>