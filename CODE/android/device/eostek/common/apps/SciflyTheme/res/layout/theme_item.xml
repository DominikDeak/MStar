<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <!-- android:paddingBottom="20dp"     android:background="#222222" -->

    <ImageView
        android:id="@+id/theme_item"
        android:layout_width="280dp"
        android:layout_height="157dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/default_img"
        android:gravity="center"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/selected"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_alignRight="@+id/theme_item"
        android:layout_alignTop="@+id/theme_item"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/current_theme"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/download"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/online"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="280dp"
        android:layout_height="33dp"
        android:layout_alignBottom="@+id/theme_item"
        android:layout_alignLeft="@id/theme_item"
        android:background="@color/background"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progress"
        android:visibility="visible" />

    <TextView
        android:id="@+id/item_textview"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/theme_item"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:textColor="@android:color/white" />

    <!-- android:visibility="gone" -->

</RelativeLayout>