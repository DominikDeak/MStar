<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:layout_gravity="center"
    android:background="@drawable/setmeup_bg">
	
	<TextView 
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="#F5F5F5"
        android:textSize="15sp"
        android:padding="10dp"
        />
	
	<TextView 
        android:id="@+id/welcome"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#F5F5F5"
        android:textSize="40sp"
        android:layout_marginTop="50dp"
        android:text="@string/welcom_info"
        />
	<TextView 
        android:id="@+id/tips"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#F5F5F5"
        android:textSize="20sp"
        android:layout_below="@+id/welcome"
        android:text="@string/guide_description"
        />
	<RelativeLayout 
        android:id="@+id/holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        
	    <RelativeLayout
	        android:id="@+id/downloadholder"
	        android:layout_width="362dp"
	        android:layout_height="370dp"
	        android:layout_gravity="center"
	        android:background="@drawable/shape"
	        android:gravity="center"
	        android:orientation="vertical" >
	        
	        <ImageView
	            android:id="@+id/erweima"
	            android:layout_width="200dp"
	            android:layout_height="200dp"
	            android:layout_centerHorizontal="true"
	            android:background="@drawable/pq_code"
	            android:gravity="center" />

	        <TextView
	            android:id="@+id/step1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/erweima"
	            android:layout_centerHorizontal="true"
	            android:gravity="center"
	            android:textColor="#F5F5F5"
	            android:textSize="18sp"
	            android:text="@string/step_I"
	           	android:layout_marginTop="20dp" />

	        <TextView
	            android:id="@+id/url"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/step1"
	            android:layout_centerHorizontal="true"
	            android:gravity="center"
	            android:textColor="#F5F5F5"
	            android:textSize="18sp"/>

	        <TextView
	            android:id="@+id/download"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/url"
	            android:layout_centerHorizontal="true"
	            android:gravity="center"
	            android:textColor="#F5F5F5"
	            android:textSize="18sp" 
	            android:text="@string/download_tip"/>
	        
        </RelativeLayout>
        
	    <RelativeLayout
	        android:id="@+id/deviceholder"
	        android:layout_width="362dp"
	        android:layout_height="370dp"
	        android:layout_marginLeft="480dp"
	        android:layout_gravity="center"
	        android:background="@drawable/shape"
	        android:gravity="center"
	        android:orientation="vertical" >
	        
	        <TextView
	            android:id="@+id/device"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:textColor="#F5F5F5"
	            android:textSize="24sp" 
	            android:text="@string/dev_name"/>

	        <TextView
	            android:id="@+id/name"
	            android:layout_width="340dp"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/device"
	            android:layout_centerInParent="true"
	            android:gravity="center"
		    android:padding="3dp"
	            android:background="@drawable/shape"
	            android:textSize="28sp" />

	        <TextView
	            android:id="@+id/step2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/name"
	            android:layout_centerInParent="true"
	            android:gravity="center"
	            android:textColor="#F5F5F5"
	            android:textSize="18sp"
	            android:layout_marginTop="110dp"
				android:text="@string/step_II"/>

	        <TextView
	            android:id="@+id/setting"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/step2"
	            android:layout_centerInParent="true"
	            android:gravity="center"
	            android:textColor="#F5F5F5"
	            android:textSize="18sp" 
	            android:text="@string/ope_tip"/>
	        
        </RelativeLayout>
	    
    </RelativeLayout>
    
	<TextView
	    android:id="@+id/exit_tip"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/holder"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="20dp"
	    android:gravity="center"
	    android:text="@string/exit_tip"
	    android:textColor="#F5F5F5"
	    android:textSize="20sp" />

	<TextView
	    android:id="@+id/current_phrase"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_marginBottom="30dp"
	    android:layout_marginLeft="50dp"
	    android:gravity="center"
	    android:textColor="#F5F5F5"
	    android:textSize="60sp" />
	
    <TextView 
        android:id="@+id/paircode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
	    android:textColor="#F5F5F5"
	    android:textSize="60sp"/>

</RelativeLayout>
