<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.android.settings.widget.TitleWidget
        android:id="@+id/correct_time_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
       
       <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:orientation="vertical" >
		
           <com.android.settings.widget.TextCheckWidget
            android:id="@+id/ntp_server_china"
            android:layout_width="897dp"
            android:layout_height="56dp"
            android:paddingLeft="350dp"
            android:background="@drawable/btn_bg_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/ntpserver_china"
            android:textSize="22sp" />

        <com.android.settings.widget.TextCheckWidget
            android:id="@+id/ntp_server_taiwan"
            android:layout_width="897dp"
            android:layout_height="56dp"
            android:paddingLeft="350dp"
            android:background="@drawable/btn_bg_selector"
             android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/ntpserver_taiwan"
            android:textSize="22sp" />

        <com.android.settings.widget.TextCheckWidget
            android:id="@+id/ntp_server_american"
            android:layout_width="897dp"
            android:layout_height="56dp"
            android:paddingLeft="350dp"
            android:background="@drawable/btn_bg_selector"
             android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/ntpserver_american"
            android:textSize="22sp" />
 <!--  android:paddingLeft="250dp" -->
    </LinearLayout>
       
       
</LinearLayout>

