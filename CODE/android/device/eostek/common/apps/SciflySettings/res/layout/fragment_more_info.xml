<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/selector_width"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:gravity="left|top"
            android:orientation="vertical" >

            <TableRow android:background="#33000000" >

                <TextView
                    android:id="@+id/tv_about_more_cpu_key"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:text="@string/about_more_cpu"
                    android:textColor="@color/green"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_about_more_cpu_value"
                    android:layout_width="600dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:textColor="@color/green"
                    android:textSize="22sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/tv_about_more_ram_key"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:text="@string/about_more_ram"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_about_more_ram_value"
                    android:layout_width="600dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:textSize="22sp" />
            </TableRow>

            <TableRow android:background="#33000000" >

                <TextView
                    android:id="@+id/tv_about_more_flash_key"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:text="@string/about_more_flash"
                    android:textColor="@color/green"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_about_more_flash_value"
                    android:layout_width="600dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:textColor="@color/green"
                    android:textSize="22sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/tv_about_more_mac_key"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:text="@string/about_more_mac"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_about_more_mac_value"
                    android:layout_width="600dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:textSize="22sp" />
            </TableRow>

            <TableRow android:background="#33000000" >

                <TextView
                    android:id="@+id/tv_about_more_up_time_key"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:text="@string/about_more_up_time"
                    android:textColor="@color/green"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_about_more_up_time_value"
                    android:layout_width="600dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:textColor="@color/green"
                    android:textSize="22sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/tv_about_more_version_key"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:text="@string/about_more_version"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_about_more_version_value"
                    android:layout_width="600dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:textSize="22sp" />
            </TableRow>

            <TableRow android:background="#33000000" >

                <TextView
                    android:id="@+id/tv_about_more_up_version_real_key"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:text="@string/about_more_up_version_real_key"
                    android:textColor="@color/green"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_about_more_up_version_real_value"
                    android:layout_width="600dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:textColor="@color/green"
                    android:textSize="22sp" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</LinearLayout>