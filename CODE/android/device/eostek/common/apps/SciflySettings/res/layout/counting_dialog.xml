<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480dp"
    android:layout_height="320dp"
    android:padding="6dp"
    android:layout_gravity="center"
    android:background="#E3F2FD" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/message_title_margin_left"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/update_icon" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="@string/update_settings"
                android:textColor="#212121"
                android:textSize="@dimen/dialog_title_text_size" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title"
        android:background="#1A424242" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#212121"
            android:textSize="22dp"
            android:text="@string/update_summary"/>

        <TextView 
            android:id="@+id/counting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="#757575"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/reboot_later"
            android:layout_height="wrap_content"
            android:layout_width="231dp"
            android:background="@drawable/delete_button_focus"
            android:text="@string/reboot_later"
            android:textColor="@android:color/white"
            android:textSize="22dp" />

        <Button
            android:id="@+id/reboot_now"
            android:layout_height="wrap_content"
            android:layout_width="231dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/delete_button_focus"
            android:text="@string/reboot_now"
            android:textColor="@android:color/white"
            android:textSize="22dp" />

    </LinearLayout>

</RelativeLayout>