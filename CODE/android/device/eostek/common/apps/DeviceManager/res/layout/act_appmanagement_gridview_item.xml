<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="141dp"
    android:layout_height="157dp" >

    <RelativeLayout
        android:id="@+id/act_appmanagement_gridview_item_select"
        android:layout_width="141dp"
        android:layout_height="157dp"
        android:background="@drawable/bg_autostart_dark_list_selector" >
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/fragment_recommend_gridview_item_layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pic_bg" >
    </RelativeLayout>
    
    <ImageView
        android:id="@+id/act_appmanagement_gridview_item_iv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/act_appmanagement_update"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/act_appmanagement_gridview_item_iv_icon"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:src="@drawable/app_icon" />

    <TextView
        android:id="@+id/act_appmanagement_gridview_item_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <com.eostek.scifly.devicemanager.ui.DownloadProcessView
        android:id="@+id/act_appmanagement_gridview_item_process_view"
        android:layout_width="141dp"
        android:layout_height="157dp"
        android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingTop="12dp"
		android:paddingBottom="12dp" 
        android:layout_centerInParent="true"/>

</RelativeLayout>