<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:padding="0dp">

    <RelativeLayout
        android:id="@+id/fragment_recommend_gridview_item_layout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_autostart_dark_list_selector" >
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/fragment_recommend_gridview_item_layout2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/pic_bg" >
    </RelativeLayout>
    
    <ImageView
		android:id="@+id/fragment_recommend_gridview_item_iv_icon"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="40dp"
		android:src="@drawable/app_icon"/>

	<TextView
		android:id="@+id/fragment_recommend_gridview_item_tv_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:layout_below="@id/fragment_recommend_gridview_item_iv_icon"
		android:layout_marginTop="20dp"
		
		android:textColor="#FFFFFF"
		android:textSize="20sp" />
    
    <com.eostek.scifly.devicemanager.ui.DownloadProcessView 
        android:id="@+id/fragment_recommend_gridview_item_process_view"
		android:layout_width="200dp"
		android:layout_height="200dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingTop="12dp"
		android:paddingBottom="12dp"
		android:layout_centerInParent="true"/>
</RelativeLayout>
