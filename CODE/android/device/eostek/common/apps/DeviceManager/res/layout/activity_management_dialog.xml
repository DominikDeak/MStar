<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="840dp"
	android:layout_height="506dp"
	android:orientation="vertical" 
	android:layout_gravity="center"
	android:gravity="center">
	
	<!-- icon and version -->
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0.35"
		android:gravity="center"
		android:layout_gravity="center"
		android:orientation="horizontal" 
		android:background="#5EA0FB">
		
        <!-- icon -->
		<ImageView 
		    android:id="@+id/act_management_dlg_icon"
		    android:layout_width="80dp"
		    android:layout_height="80dp"/>
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center"
			android:layout_gravity="center"
			android:layout_marginLeft="50dp"
			android:orientation="vertical" >
			<!-- name -->
			<TextView 
			    android:id="@+id/act_management_dlg_name"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    android:gravity="center|left"
			    android:layout_marginBottom="5dp"
			    android:textColor="@color/white"
			    android:textSize="20sp"/>
			<!-- version -->
			<TextView 
			    android:id="@+id/act_management_dlg_version"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    android:gravity="center|left"
			    android:layout_marginTop="5dp"
			    android:textColor="@color/white"
			    android:textSize="20sp"/>
		</LinearLayout>	
	</LinearLayout>		
	
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0.35"
		android:gravity="center"
		android:layout_gravity="center"
		android:orientation="vertical"
		android:background="#5297F9" >
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="center"
			android:layout_gravity="center"
			android:orientation="horizontal">
			<TextView 
			    android:layout_weight="1"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:gravity="center|right"
			    android:textStyle="bold"
			    android:text="@string/act_management_dlg_disk_title"
			    android:textColor="@color/white"
			    android:textSize="20sp"/>
			
			<TextView 
			    android:layout_weight="1"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:gravity="center"
			    android:text="@string/act_management_dlg_disk_sub_title_total"
			    android:textColor="@color/white"
			    android:textSize="18sp"/>
			
			<TextView 
			    android:id="@+id/act_management_dlg_tv_disk_total"
			    android:layout_weight="1"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:gravity="center|left"
			    android:textColor="@color/white"
			    android:textSize="18sp"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="center"
			android:layout_gravity="center"
			android:orientation="horizontal">
			<TextView 
			    android:layout_weight="1"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:gravity="center|right"
			    android:textStyle="bold"
			    android:textColor="@color/white"
			    android:textSize="20sp"/>
			
			<TextView 
			    android:layout_weight="1"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:gravity="center"
			    android:text="@string/act_management_dlg_disk_sub_title_app"
			    android:textColor="@color/white"
			    android:textSize="18sp"/>
			
			<TextView 
			    android:id="@+id/act_management_dlg_tv_disk_app"
			    android:layout_weight="1"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:gravity="center|left"
			    android:textColor="@color/white"
			    android:textSize="18sp"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="center"
			android:layout_gravity="center"
			android:orientation="horizontal">
			<TextView 
			    android:layout_weight="1"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:gravity="center|right"
			    android:textStyle="bold"
			    android:textColor="@color/white"
			    android:textSize="20sp"/>
			
			<TextView 
			    android:layout_weight="1"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:gravity="center"
			    android:text="@string/act_management_dlg_disk_sub_title_data"
			    android:textColor="@color/white"
			    android:textSize="18sp"/>
			
			<TextView 
			    android:id="@+id/act_management_dlg_tv_disk_data"
			    android:layout_weight="1"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:gravity="center|left"
			    android:textColor="@color/white"
			    android:textSize="18sp"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="center"
			android:layout_gravity="center"
			android:orientation="horizontal">
			<TextView 
			    android:layout_weight="1"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:gravity="center|right"
			    android:textStyle="bold"
			    android:text="@string/act_management_dlg_cache_title"
			    android:textColor="@color/white"
			    android:textSize="20sp"/>
			
			<TextView 
			    android:layout_weight="1"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:gravity="center"
			    android:textColor="@color/white"
			    android:textSize="18sp"/>
			
			<TextView 
			    android:id="@+id/act_management_dlg_tv_cache"
			    android:layout_weight="1"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:gravity="center|left"
			    android:textColor="@color/white"
			    android:textSize="18sp"/>
		</LinearLayout>
	</LinearLayout>	
	
    <RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0.35"
		android:background="#5297F9" >
		
		<LinearLayout
		    android:id="@+id/act_management_dlg_ll_normal_app"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:layout_gravity="center"
			android:orientation="horizontal">
			<Button 
			    android:id="@+id/act_management_dlg_btn_normal_app_clear_data"
			    style="@style/Scifly.Button.Normal"
                android:layout_width="155dp"
            	android:layout_height="50dp"
                android:focusableInTouchMode="true"
                android:text="@string/act_management_dlg_btn_clear_data"
                android:textSize="22sp" />
			<Button 
			    android:id="@+id/act_management_dlg_btn_normal_app_clear_cache"
			    style="@style/Scifly.Button.Normal"
                android:layout_width="155dp"
            	android:layout_height="50dp"
            	android:layout_marginLeft="20dp"
            	android:layout_marginRight="10dp"
                android:focusableInTouchMode="true"
                android:text="@string/act_management_dlg_btn_clear_cache"
                android:textSize="22sp" />
			<Button 
			    android:id="@+id/act_management_dlg_btn_normal_app_uninstall"
			    style="@style/Scifly.Button.Normal"
                android:layout_width="155dp"
            	android:layout_height="50dp"
            	android:layout_marginLeft="10dp"
            	android:layout_marginRight="20dp"
                android:focusableInTouchMode="true"
                android:text="@string/act_management_dlg_btn_uninstall"
                android:textSize="22sp" />
			<Button 
			    android:id="@+id/act_management_dlg_btn_normal_app_update"
			    style="@style/Scifly.Button.Normal"
                android:layout_width="155dp"
            	android:layout_height="50dp"
                android:focusableInTouchMode="true"
                android:text="@string/act_management_dlg_btn_update"
                android:textSize="22sp" />
		</LinearLayout>	
		 
		<LinearLayout
		    android:id="@+id/act_management_dlg_ll_system_app"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:layout_gravity="center"
			android:orientation="horizontal"
			android:visibility="gone">
			<Button 
			    android:id="@+id/act_management_dlg_btn_system_app_clear_data"
			    style="@style/Scifly.Button.Normal"
                android:layout_width="180dp"
            	android:layout_height="50dp"
                android:focusableInTouchMode="true"
                android:layout_marginRight="15dp"
                android:text="@string/act_management_dlg_btn_clear_data"
                android:textSize="22sp" />
			<Button 
			    android:id="@+id/act_management_dlg_btn_system_app_clear_cache"
			    style="@style/Scifly.Button.Normal"
                android:layout_width="180dp"
            	android:layout_height="50dp"
            	android:layout_marginLeft="15dp"
                android:focusableInTouchMode="true"
                android:text="@string/act_management_dlg_btn_clear_cache"
                android:textSize="22sp" />
		</LinearLayout>	

	</RelativeLayout>	

</LinearLayout>