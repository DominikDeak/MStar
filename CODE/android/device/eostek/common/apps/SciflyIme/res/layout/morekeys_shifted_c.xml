<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/more_keys_layout"
    android:layout_width="226dp"
    android:layout_height="136dp"
    android:background="@drawable/morekeys_c"
    android:orientation="vertical"
    android:padding="2dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:layout_width="@dimen/morekeys_width"
            android:layout_height="@dimen/morkeys_height"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:focusable="false" />

        <Button
            style="@style/morekeys"
            android:layout_marginLeft="9dp"
            android:text="@string/Č" />

        <Button
            android:layout_width="@dimen/morekeys_width"
            android:layout_height="@dimen/morkeys_height"
            android:layout_marginLeft="9dp"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:focusable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp" >

        <Button
            style="@style/morekeys"
            android:text="@string/Ć" />

        <Button
            style="@style/morekeys"
            android:layout_marginLeft="8dp"
            android:focusable="true"
            android:text="@string/C" />

        <Button
            style="@style/morekeys"
            android:layout_marginLeft="9dp"
            android:text="@string/Ç" />
    </LinearLayout>

</LinearLayout>