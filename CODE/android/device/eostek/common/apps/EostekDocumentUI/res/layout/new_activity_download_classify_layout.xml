<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_bg" >


    <TextView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/downloaded_type"
        android:layout_marginRight="@dimen/activity_download_classify_menu_margin_right"
        android:focusable="false"
        android:drawableLeft="@drawable/menuicon"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text="@string/menu_tips"
        android:textColor="@android:color/white"
        android:textSize="36px"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/downloaded_type"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_download_classify_downloaded_type_height"
        android:layout_marginTop="@dimen/activity_download_classify_downloaded_type_top"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:drawableLeft="@drawable/back_icon"
        android:layout_marginLeft="100dp"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:text="@string/downloaded_vedio"
        android:textColor="@android:color/white"
        android:textSize="46px"
        android:textStyle="bold" />

    <GridView
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/downloaded_type"
        android:layout_marginBottom="@dimen/activity_download_classify_grid_vertical_spacing"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_centerHorizontal="true"
        android:listSelector="@android:color/transparent"
        android:horizontalSpacing="20dp"        
        android:numColumns="6"
        android:scrollbars="none"
        android:scrollingCache="false"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/activity_download_classify_grid_vertical_spacing" />

    <TextView
        android:id="@+id/empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/downloaded_type"
        android:gravity="center"
        android:text="@string/downloaded_empty"
        android:textColor="@android:color/white"
        android:textSize="@dimen/activity_download_classify_empty_layout_size"
        android:visibility="gone" />

</RelativeLayout>