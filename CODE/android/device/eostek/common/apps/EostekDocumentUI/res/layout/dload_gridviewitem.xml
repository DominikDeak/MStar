<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_focus"
    android:layout_gravity="center"
    android:background="@drawable/gridview_item_selector"
    android:padding="0dp"
    android:layout_width="170dp"
    android:layout_height="175dp" >

   
    
    <ImageView
        android:id="@+id/item_bg"
        android:layout_width="170dp"
        android:layout_height="175dp"
        android:focusable="false"
        android:layout_centerInParent="true"
        android:background="@drawable/griditemview_bg" />

    <com.eostek.documentui.view.ProgressView
        android:id="@+id/downloading_progress"
        android:layout_width="142dp"
        android:layout_height="152dp"
        android:focusable="false"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_bg"
        android:layout_alignLeft="@+id/item_bg"
        android:focusable="false"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:textSize="12dp"/>

    <ImageView
        android:id="@+id/downloading_status_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:focusable="false"
        android:layout_alignTop="@+id/item_bg"
        android:layout_alignRight="@+id/item_bg"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/downloading" />

    <ImageView
        android:id="@+id/file_type_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:focusable="false"
        android:layout_centerInParent="true"
        android:background="@drawable/video_default_icon" />

    <TextView
        android:id="@+id/file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_below="@+id/file_type_image"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="90dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="12dp" />

</RelativeLayout>
