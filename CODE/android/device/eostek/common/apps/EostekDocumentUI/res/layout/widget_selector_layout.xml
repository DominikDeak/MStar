<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:paddingBottom="12dp"
    android:paddingLeft="@dimen/widget_selector_padding_right"
    android:paddingRight="@dimen/widget_selector_padding_right"
    android:paddingTop="12dp" >

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/left_arrow"
            android:layout_width="@dimen/activity_download_classify_grid_horizontal_spacing"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:clickable="true"
            android:contentDescription="@string/action_settings"
            android:focusable="false"
            android:paddingRight="@dimen/activity_download_classify_menu_margin_right"
            android:src="@drawable/arrow_left_white" />

        <TextView
            android:id="@+id/value"
            android:layout_width="@dimen/widget_selector_value_width"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/activity_download_classify_menu_size" />

        <ImageButton
            android:id="@+id/right_arrow"
            android:layout_width="@dimen/activity_download_classify_grid_horizontal_spacing"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:clickable="true"
            android:contentDescription="@string/action_settings"
            android:focusable="false"
            android:paddingLeft="@dimen/activity_download_classify_menu_margin_right"
            android:src="@drawable/arrow_right_white" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text="@string/download_task_num"
        android:textColor="@android:color/white"
        android:textSize="@dimen/widget_selector_item_name_size"
        android:textStyle="bold" />

</RelativeLayout>

