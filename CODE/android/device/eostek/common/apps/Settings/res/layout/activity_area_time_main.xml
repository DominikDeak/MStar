<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.android.settings.widget.TitleWidget
        android:id="@+id/datetime_city_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
       
       <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:orientation="vertical" >

       <com.android.settings.widget.TextTextWidget
            android:id="@+id/correct_time"
            android:layout_width="897dp"
            android:layout_height="56dp"
            android:background="@drawable/btn_bg_selector"
            android:clickable="true"
            android:focusable="true" />
        
    <com.android.settings.widget.TextSelectorWidget
            android:id="@+id/is24_hour"
            android:layout_width="897dp"
            android:layout_height="56dp"
          android:background="@drawable/btn_bg_selector"
            android:clickable="true"
            android:focusable="true" />

         <com.android.settings.widget.TextTextWidget
            android:id="@+id/set_timezone"
            android:layout_width="897dp"
            android:layout_height="56dp"
           android:background="@drawable/btn_bg_selector"
            android:clickable="true"
            android:focusable="true" />
        
        <com.android.settings.widget.TextTextWidget
            android:id="@+id/set_city"
            android:layout_width="897dp"
            android:layout_height="56dp"
         android:background="@drawable/btn_bg_selector"
            android:clickable="true"
            android:focusable="true" /> 

    </LinearLayout>
       
       
</LinearLayout>

    
