<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.android.settings.widget.TitleWidget
        android:id="@+id/title_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/update_net_item"
            android:layout_width="@dimen/selector_width"
            android:layout_height="@dimen/settings_item_height"
            android:background="@drawable/btn_bg_selector"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:paddingRight="@dimen/network_item_padding"
                android:text="@string/system_net_update"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <!-- android:gravity="right|center_vertical" -->

            <TextView
                android:id="@+id/update_item_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/network_item_padding"
                android:text="@string/system_net_update"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/update_local_item"
            android:layout_width="@dimen/selector_width"
            android:layout_height="@dimen/settings_item_height"
            android:background="@drawable/btn_bg_selector"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:paddingRight="@dimen/network_item_padding"
                android:text="@string/system_local_update"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/update_item_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/network_item_padding"
                android:text="@string/system_local_update"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:visibility="invisible" />
        </LinearLayout>

        <com.android.settings.widget.TextSelectorSpecialWidget
            android:id="@+id/load_acceleration_pattern_widget"
            android:layout_width="@dimen/selector_width"
            android:layout_height="@dimen/settings_item_height"
            android:background="@drawable/btn_bg_selector"
            android:clickable="true"
            android:focusable="true" />
        <!-- </LinearLayout> -->

        <LinearLayout
            android:id="@+id/recovery_item"
            android:layout_width="@dimen/selector_width"
            android:layout_height="@dimen/settings_item_height"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="130dp"
            android:background="@drawable/btn_bg_selector"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:paddingRight="@dimen/network_item_padding"
                android:text="@string/recovery"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/update_item_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/network_item_padding"
                android:text="@string/recovery"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>