<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.android.settings.widget.TitleWidget
        android:id="@+id/activity_system_settings_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_language"
        android:layout_width="@dimen/selector_width"
        android:layout_height="@dimen/list_item_height"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/btn_bg_selector"
        android:focusable="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:gravity="right|center_horizontal|center_vertical"
            android:text="@string/language_settings"
            android:textColor="#ffffffff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_language"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:gravity="left|center_horizontal|center_vertical"
            android:textColor="#ffffffff"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_input_method"
        android:layout_width="@dimen/selector_width"
        android:layout_height="@dimen/list_item_height"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/btn_bg_selector"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:gravity="right|center_horizontal|center_vertical"
            android:text="@string/inputmethod_settings"
            android:textColor="#ffffffff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_input_method"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:gravity="left|center_horizontal|center_vertical"
            android:textColor="#ffffffff"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_device_name"
        android:layout_width="@dimen/selector_width"
        android:layout_height="@dimen/list_item_height"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/btn_bg_selector"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:gravity="right|center_horizontal|center_vertical"
            android:text="@string/device_name"
            android:textColor="#ffffffff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:gravity="left|center_horizontal|center_vertical"
            android:textColor="#ffffffff"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_app_install_location"
        android:layout_width="@dimen/selector_width"
        android:layout_height="@dimen/list_item_height"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/btn_bg_selector"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:gravity="right|center_horizontal|center_vertical"
            android:text="@string/install_location"
            android:textColor="#ffffffff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_app_install_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:gravity="left|center_horizontal|center_vertical"
            android:textColor="#ffffffff"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>