<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/eos_epg_channel_item_layout_width"
    android:layout_height="wrap_content"
    android:padding="@dimen/eos_epg_channel_item_padding" >

    <TextView
        android:id="@+id/epg_channelno"
        style="@style/setting_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/epg_channeltype_layout_marginRight"
        android:layout_marginRight="@dimen/epg_channeltype_layout_marginRight" />

    <TextView
        android:id="@+id/epg_channelname"
        style="@style/setting_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/epg_channeltype_layout_marginRight"
        android:layout_toRightOf="@id/epg_channelno" />

    <TextView
        android:id="@+id/epg_channeltype"
        style="@style/setting_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/epg_channeltype_layout_marginRight"
        android:textSize="@dimen/epg_channelname_textSize" />

</RelativeLayout>