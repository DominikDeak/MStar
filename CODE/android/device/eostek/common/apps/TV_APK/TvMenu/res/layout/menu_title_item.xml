<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/title_item_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/titlebar_bg1"
        android:layout_gravity="bottom" >
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/title_item_rl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/titlebar_bg2"
        android:layout_gravity="bottom" 
        android:visibility="invisible" >
    </RelativeLayout>

    <TextView
        android:id="@+id/menuitem_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="17dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/menuitem_title_txt_textsize" />

</FrameLayout>