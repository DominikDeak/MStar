<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="@dimen/eos_menu_rl_main_width"
    android:layout_height="@dimen/eos_menu_rl_main_height"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/eos_menu_rl_main_padding_bottom" >

    <GridView
        android:id="@+id/titles_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@android:color/transparent" />

    <FrameLayout
        android:id="@+id/content_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/content_bg" >
    </FrameLayout>

</LinearLayout>