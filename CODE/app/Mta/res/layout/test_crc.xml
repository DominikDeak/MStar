<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sn_mac"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/serial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:paddingTop="3dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="@color/white"
            android:textSize="11.0pt"
			android:text="@string/please_scan_serial_number_again"/>

        <EditText
            android:id="@+id/serial_editText"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:cursorVisible="true"
            android:gravity="center"
            android:imeOptions="actionDone|flagNoExtractUi|flagNoFullscreen"
            android:maxLength="12"
            android:singleLine="true" />
        
		<TextView
		    android:id="@+id/test_crc_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"  
            android:textStyle="bold"                  
            android:textSize="56.0pt"/>
		<TextView
		    android:id="@+id/test_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"                  
            android:textSize="10.0pt"/>
		
		<TextView
		    android:id="@+id/test_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"       
            android:textSize="10.0pt"/>
		
		<TextView
		    android:id="@+id/mac_crc_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"         
            android:textSize="10.0pt"/>
		
		<TextView
		    android:id="@+id/mac_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"        
            android:textSize="10.0pt"/>
		
		<TextView
		    android:id="@+id/mac_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"         
            android:textSize="10.0pt"/>
		        
    </LinearLayout>

</LinearLayout>